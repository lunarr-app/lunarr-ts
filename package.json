{
  "name": "lunarr-server",
  "version": "0.0.1",
  "description": "monitor media files on a headless server",
  "type": "module",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "lint": "eslint .",
    "postlint": "tsc --noemit",
    "prebuild": "eslint .",
    "build": "tsc",
    "test": "ava",
    "dev": "nodemon src/server.ts"
  },
  "repository": "https://github.com/lunarr-app/lunarr-server",
  "author": "Sayem Chowdhury",
  "license": "Apache-2.0",
  "dependencies": {
    "@ctrl/video-filename-parser": "^4.12.0",
    "@sinclair/typebox": "^0.27.4",
    "argon2": "^0.30.3",
    "dayjs": "^1.11.7",
    "dotenv": "^16.0.3",
    "envalid": "^7.3.1",
    "fastify": "^4.15.0",
    "mongodb": "^5.2.0",
    "pino-pretty": "^10.0.0",
    "tmdb-ts": "^0.1.8",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@swc/core": "^1.3.49",
    "@types/node": "^18.15.11",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "ava": "^5.2.0",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.7",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "ava": {
    "environmentVariables": {
      "MONGODB_URI": "mongodb://127.0.0.1:27017/lunarr_test_ava"
    },
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--loader=ts-node/esm"
    ],
    "concurrency": 1,
    "timeout": "30s",
    "verbose": true
  }
}
